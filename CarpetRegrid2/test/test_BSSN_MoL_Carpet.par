
!DESC "1+log sliced black hole, ADM_BSSN, Iterative CN, Carpet with 2 levels"

# Required thorns

ActiveThorns = "CoordBase InitBase SymBase time carpet carpetlib carpetregrid2 GSL LoopControl carpetreduce carpetslab boundary cartgrid3d bssn_mol mol nanchecker idanalyticbh carpetioascii ioutil carpetiobasic carpetioscalar admbase admmacros coordgauge spacemask staticconformal"

# Grid

driver::ghost_size   = 2

CartGrid3D::avoid_origin = no

Carpet::max_refinement_levels = 3
Carpet::prolongation_order_space = 3
Carpet::prolongation_order_time = 2
Carpet::domain_from_coordbase = yes

InitBase::initial_data_setup_method = init_some_levels
Carpet::init_fill_timelevels = yes

CarpetRegrid2::num_centres  = 1
CarpetRegrid2::regrid_every = 0

CarpetRegrid2::num_levels_1 = 2
CarpetRegrid2::radius_1[1]  = 1.0

Grid::type = "coordbase"

CoordBase::xmin = -2.0
CoordBase::ymin = -2.0
CoordBase::zmin = -2.0
CoordBase::xmax = +2.0
CoordBase::ymax = +2.0
CoordBase::zmax = +2.0
CoordBase::dx   =  0.2
CoordBase::dy   =  0.2
CoordBase::dz   =  0.2

cactus::cctk_initial_time = 0.0
cactus::cctk_itlast       = 20
 
time::dtfac = 0.25

# Initial data 

admbase::metric_type = "static conformal"
admbase::initial_data = "schwarzschild"

# Evolution

admbase::evolution_method = "adm_bssn" 
adm_bssn::timelevels      = 3

MoL::ODE_Method = "ICN"
MoL::MoL_Intermediate_Steps = 3

adm_bssn::bound = "flat"

# Gauge

admbase::lapse_evolution_method = "1+log"

# Output

IO::out_dir       = $parfile
IO::out_fileinfo  = "none"
IO::parfile_write = "no"

IOBasic::outInfo_every = 1
IOBasic::outInfo_vars  = "admbase::gxx"

IOScalar::outScalar_every      = 8
IOScalar::outScalar_reductions = "average count maximum minimum norm1 norm2 norm_inf"
IOScalar::outScalar_vars       = "adm_bssn::adm_bs_gxx adm_bssn::adm_bs_Axx adm_bssn::adm_bs_phi adm_bssn::adm_bs_k adm_bssn::adm_bs_Gx admbase::gxx admbase::kxx admbase::alp"

##################################################################

