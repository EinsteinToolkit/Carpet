# Schedule definitions for thorn Timers

SCHEDULE Timer_Startup AT startup BEFORE Driver_Startup
{
  LANG: C
} "Prepare hierarchical timers"

SCHEDULE Timer_Shutdown AT shutdown AFTER Driver_Shutdown
{
  LANG: C
} "Shutdown hierarchical timers"

SCHEDULE HighResTimer_OutputAllTimers AS zzz_HighResTimer_OutputAllTimers AT terminate
{
  LANG: C
  OPTIONS: global-late
} "Output high-resolution timers"
