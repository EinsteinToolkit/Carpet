# Ensure that MPI is available
ifeq ($(origin MPI_LIBS),undefined)
$(NAME): MissingMPI
.PHONY: MissingMPI
MissingMPI:
	@echo "Configuration error:"
	@echo "Thorn CarpetLib requires MPI"
	@echo "Please configure with MPI, or remove CarpetLib from ThornList"
	exit 2
endif
